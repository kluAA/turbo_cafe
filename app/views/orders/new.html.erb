<%= form_for [@order], method: :post, html: { class: 'flex flex-col items-center mt-12' } do |f| %>
  <div class="flex flex-col gap-4 px-4 md:w-[600px]">
    <h1 class="text-white text-2xl font-semibold">Welcome! What is your name?</h1>
    <%= f.text_field :first_name, placeholder: 'First Name', autofocus: true, class: 'bg-zinc-900 text-xl text-sky-300 py-2 border-b-2 border-slate-600 focus:border-sky-300' %>
    <%= f.text_field :last_name, placeholder: 'Last Name', class: 'bg-zinc-900 text-xl text-sky-300 py-2 border-b-2 border-slate-600 focus:border-sky-300' %>
    <%= f.submit 'Proceed', class: 'text-white bg-sky-500 md:w-1/4 py-2 font-bold md:ml-auto cursor-pointer' %>
  </div>
<% end %>