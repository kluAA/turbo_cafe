<% items.each do |item| %>
  <div>
    <div class="flex flex-row items-baseline">
      <div class="text-white text-lg font-bold">
        <span><%= item.name %></span>
        <span class="text-base text-green-400">($<%= item.price %>)</span>
      </div>
      <%= button_to '+', order_entries_path(order_id: order.id, item_id: item.id), method: :post, class: 'text-white px-2 ml-2 bg-sky-600 rounded-sm' %>
    </div>
    <p class="text-slate-200 text-sm italic ml-1"><%= item.description %></p>
  </div>
<% end %>